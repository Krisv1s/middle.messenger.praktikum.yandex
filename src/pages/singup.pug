extends ../layout/pattern.pug

include ../components/form/form.pug
include ../components/input/input.pug
include ../components/button/button.pug
include ../components/link/link.pug

block pageHead
    title Регистрация

block pageBody
    -
        const inputs = [{
            "type": "email",
            "placeholder": "Почта",
        }, {
            "type": "text",
            "placeholder": "Логин",
            "name": "login"
        }, {
            "type": "text",
            "placeholder": "Имя",
            "name": "first_name"
        }, {
            "type": "text",
            "placeholder": "Фамилия",
            "name": "second_name"
        }, {
            "type": "tel",
            "placeholder": "Телефон",
            "name": "phone"
        }, {
            "type": "password",
            "placeholder": "Пароль",
        }, {
            "type": "password",
            "placeholder": "Пароль (ещё раз)",
        }];
    +Form()
        .form-first
            h1(class="form-title") Регистрация
            each val, index in inputs
                +Input(val.type, val.placeholder, `input${index}`, val.name || val.type)
        .form-second
            +Button("Зарегистрироваться", "button-primary", "submit")
            +Link("Войти", "button button-transparent")
