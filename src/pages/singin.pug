extends ../layout/pattern.pug

include ../components/form/form.pug
include ../components/input/input.pug
include ../components/button/button.pug
include ../components/link/link.pug

block pageHead
    title Вход

block pageBody
    -
        const inputs = [{
            "type": "text",
            "placeholder": "Логин",
            "name": "login"
        }, {
            "type": "password",
            "placeholder": "Пароль",
        }];
    +Form()
        .form-first
            h1(class="form-title") Вход
            each val, index in inputs
                +Input(val.type, val.placeholder, `input${index}`, val.name || val.type)
        .form-second
            +Button("Авторизоваться", "button-primary", "submit")
            +Link("Нет аккаунта?", "button button-transparent")
